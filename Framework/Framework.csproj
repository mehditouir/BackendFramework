<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Mehdi Touir</Authors>
    <Company>mehdi.touir</Company>
    <Product>Backend.Framework</Product>
    <PackageId>Backend.Framework</PackageId>
    <Description>Provides a useful framework for building .Net Core backend applications.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl />
    <RepositoryUrl>https://github.com/mehditouir/Backend.Framework</RepositoryUrl>
    <PackageTags>Backend, Framework, DataAccess, DAO, Web</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Abstracts\Core\" />
    <Folder Include="Implementations\Core\" />
    <Folder Include="Implementations\Models\" />
    <Folder Include="Implementations\Services\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" Version="2.1.22" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="2.1.0" />
  </ItemGroup>

</Project>
